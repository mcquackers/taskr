<li id="task_<%= task.id %>">
<strong><%= task.title %></strong>  --  <%= task.description %>
<% if task.completed %>
  <%= button_to "Clear Task", task_path(task.id), form_class: "delete", method: :delete %>
  <%= form_for task, html: { class: "completed" } do |form| %>
    <%= form.hidden_field :completed, value: 0 %>
    <%= form.submit "Uncomplete task" %>
  <% end %>
<% else %>
  <%= form_for task, html: {class: "incomplete" } do |form| %>
    <%= form.hidden_field :completed, value: 1 %>
    <%= form.submit "Complete Task" %>
  <% end %>
<% end %></li>
